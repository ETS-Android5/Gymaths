    <EditText
        android:id="@+id/editText"
        android:layout_width="380dp"
        android:layout_height="163dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/back"
        android:gravity="start"
        android:hint="@string/editTextHint"
